      background: #ffeafc;
      font-family: "Comic Sans MS", sans-serif;
      overflow: hidden;
    }
    #gameCanvas {
      background: linear-gradient(#ffd6f5, #ffffff);
      display: block;
      margin: 0 auto;
    }
    #ui {
      position: absolute;
      top: 10px;
      left: 10px;
      color: #ff62b0;
      font-size: 22px;
      font-weight: bold;
      text-shadow: 1px 1px white;
